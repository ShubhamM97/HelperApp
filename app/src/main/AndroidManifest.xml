<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.india.gov.helperapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".UpdateListActivity"
            android:label="Dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UpdateDetailActivity"
            android:label="Update Detail"
            android:parentActivityName=".UpdateListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyAccountActivity"
            android:label="My Account"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RecommendationsActivity"
            android:label="Recommendations"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BookmarksActivity"
            android:label="Bookmarks"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AboutActivity"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>